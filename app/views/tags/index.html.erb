<h1>All Tags</h1>
<ul id="tags">
<% @tags.each do |tag| %>
<li>
<%= link_to tag.name, tag_path(tag),  class: 'name', id: "tag_#{tag.id}" %>
<%=  "(#{tag.articles.size})" %>
<%= link_to "delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the tag '#{tag.name}'?"}%>
</li>
<% end %>
</ul>

<%= link_to "Create a New Article", new_article_path, class: "new_article" %>